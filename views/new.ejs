<%- include('partials/header') %>

<div class="row">
  <div class="col-sm-4">
    <form class="" action="/newrec" method="post">
      <div class="card border-dark mb3" style="max-width: 20rem;">
        <div class="card-header">New Bank Transaction</div>
        <div class="card-body">
          <div class="form-group">
            <label class="col-form-label" for="dateTimeFld">Date</label>
            <input type="datetime-local" class="form-control" name="dateTimeFld" id="dateTimeFld">
          </div>
          <div class="form-group">
            <select class="custom-select" name="bankIdDrp" id="bankIdDrp">
              <option selected="">Choose Bank</option>
              <option value="1">BPI</option>
              <option value="2">SB</option>
            </select>
          </div>
          <div class="form-group">
            <select class="custom-select" name="transactTypeDrp" id="transactTypeDrp">
              <option selected="">Transaction Type</option>
              <option value="1">Deposit</option>
              <option value="2">Withdraw</option>
              <option value="3">Bills Payment</option>
              <option value="4">GCash Cash-in</option>
              <option value="5">Reload Prepaid Card</option>
            </select>
          </div>
          <div class="form-group">
            <label class="control-label">Amount</label>
            <div class="form-group">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">â‚±</span>
                </div>
                <input type="number" class="form-control" name="amountFld" min="1" step="any">
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="remarks" class="control-label">Remarks</label><br>
            <textarea class="form-control" id="remarksTxt" name="remarksTxt" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label class="col-form-label" for="locFld">Location</label><br>
            <input type="text" class="form-control" name="locFld" id="locFLd">
          </div>
          <button type="submit" class="btn btn-outline-success">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>

<br>

<%- include('partials/footer') %>
