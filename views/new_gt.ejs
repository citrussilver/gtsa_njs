<%- include('partials/header') %>

<div class="col-sm-9">
  <div class="row">
    <div class="col-sm-9">
      <form class="" action="/new_gt_rec" method="post">
        <div class="card border-primary mb-3" style="max-width: 20rem;">
          <div class="card-header">New GCash Transaction</div>
          <div class="card-body">
            <div class="form-group">
              <label class="col-form-label" for="dateTimeFld">Date</label>
              <input type="datetime-local" class="form-control" name="dateTimeFld" id="dateTimeFld">
            </div>
            <div class="form-group">
              <select class="custom-select" name="transactTypeDrp" id="transactTypeDrp">
                <option selected="">Transaction Type</option>
                <option value="1">Buy Load</option>
                <option value="2">Cash-In</option>
                <option value="3">Bills Payment</option>
                <option value="4">Income / Sale</option>
                <option value="5">Self Buy Load</option>
                <option value="6">Send to Bank</option>
              </select>
            </div>
            <div class="form-group">
              <label class="col-form-label" for="mbnFld">Mobile Number</label><br>
              <input type="text" class="form-control" name="mbnFld" id="mbnFLd">
            </div>
            <div class="form-group">
              <label class="control-label">Amount</label>
              <div class="form-group">
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text">â‚±</span>
                  </div>
                  <input type="number" class="form-control" name="amountFld" min="1" step="any" required>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="remarks" class="control-label">Remarks</label><br>
              <textarea class="form-control" id="remarksTxt" name="remarksTxt" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-outline-success">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<br>

<%- include('partials/footer') %>
